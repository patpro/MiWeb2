<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- =========== Administrador ==================================inicioA -->
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>inicioA</from-outcome>
            <to-view-id>/Administrador/inicioA.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>ingresarVoucher</from-outcome>
            <to-view-id>/Administrador/IngresarVoucher.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>agregarVendedor</from-outcome>
            <to-view-id>/Administrador/agregarVendedor.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>consultarUsuarios</from-outcome>
            <to-view-id>/Administrador/ConsultarUsuarios.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>ingresarCategoria</from-outcome>
            <to-view-id>/Administrador/IngresarCategoria.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
 <!-- =========== VENDEDOR ================================== -->   
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>agregarProductos</from-outcome>
            <to-view-id>/Vendedor/AgregarProducto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>inicioVendedor</from-outcome>
            <to-view-id>/Vendedor/InicioVendedor.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
 <!-- =========== GENERAL ================================== -->   
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>consutaProductos</from-outcome>
            <to-view-id>/consutaProductos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/registrar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>general</from-outcome>
            <to-view-id>/general.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>en_US</supported-locale>
            <supported-locale>es_ES</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.miweb.resources.propiedades</base-name> 
            <var>msg</var>
        </resource-bundle>
        <message-bundle>com.miweb.resources.propiedades</message-bundle>
    </application>
    
</faces-config>
<!-- =========== propiedades ================================== --> 
